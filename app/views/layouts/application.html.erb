<!DOCTYPE html>
<html>
  <head>
    <title>MoveTime</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <h1>Move Time</h1>
      <h3>Find Data on Your Next Hometown!</h3>
    </nav>
    <div>
      <%= form_tag :search, method: :get, id: "searching" do %>
        <form class="seach-form">
          <%= text_field_tag :city_state, nil, placeholder: "City, State" %>
          <%= submit_tag "Search", id: "search-btn" %>
        </form>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
